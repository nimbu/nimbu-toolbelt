{
  "devDependencies": {
    "@octokit/core": "^3",
    "@typescript-eslint/parser": "^6",
    "@types/node": "^16",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "lerna": "^3.22.1",
    "mem-fs-editor": "^9.4.0",
    "mem-fs": "^2.2.1",
    "oclif": "^4.3.10",
    "promise-request-retry": "^1.0.2",
    "standard": "12.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "standard": {
    "env": "mocha",
    "ignore": [
      "**/node_modules/**",
      "packages/*/lib/**"
    ]
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test --concurrency 4",
    "version": "cp packages/cli/CHANGELOG.md CHANGELOG.md && git add CHANGELOG.md",
    "alpha": "lerna run build && lerna publish from-package --pre-dist-tag next --allow-branch '**' --no-git-tag-version",
    "publish": "lerna run build && lerna publish from-package",
    "yalc:publish": "lerna run yalc:publish && lerna run yalc:push"
  },
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT"
}
