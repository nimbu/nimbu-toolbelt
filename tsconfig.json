{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./lib",
    "pretty": true,
    "rootDirs": ["./src"],
    "strict": true,
    "target": "es2017"
  },
  "include": ["./src/**/*"]
}
